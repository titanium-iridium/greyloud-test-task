{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <h1>Tasks</h1>
    
    <a href="{{ path('task_new') }}" class="btn btn-info">Create task</a><br><br>

    <table class="table table-bordered table-tasks">
        <thead>
            <tr>
                <th>Title</th>
                <th>Longest comment author and length</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for row in rows %}
            <tr>
                <td>{{ row.task_title }}</td>
                <td class="comments">
                    {% if row.comment_author %}
                        {{ row.comment_author }} [{{ row.comment_text_length }}]
                    {% else %}
                        <small>- no comments -</small>
                    {% endif %}
                </td>
                <td>
                    &bull; <a href="{{ path('task_show', {'id': row.task_id}) }}">show</a><br>
                    &bull; <a href="{{ path('task_edit', {'id': row.task_id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}